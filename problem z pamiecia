import random
import csv
waga=0
wartosc=0
tab=[]
hm=[]
hms=10
fitness=[]
ile=[]
i=0
dice = 0 
kilo=0
with open('hej.csv', newline='') as csvfile:

    csvreader = csv.reader(csvfile, delimiter=';', quotechar='|')
    
    for row in csvreader:
        tab.append(row)
        #print(row)
print("Problem plecakowy - Janowicz, ≈Åatacz, Pieczarka")
print("")
for y in range(hms):
    ile=[]
    fitness=[]
    waga=0
    wartosc=0
    print("Rozwiazanie: ",y+1)
    while(waga<=50):
        dice = random.randint(1,1000)
        kilo=tab[dice]
        test=waga+int(kilo[1])
        if (test==50):
            waga=waga+int(kilo[1])
            wartosc=wartosc+int(kilo[2])
            print("Ukradziony id: ",dice," waga: ",kilo[1]," wartosc: ",kilo[2])
            ile.append(dice)
            break
        elif(test>50):
            i=i
        else:
            waga=waga+int(kilo[1])
            wartosc=wartosc+int(kilo[2])
            print("Ukradziony id: ",dice," waga: ",kilo[1]," wartosc: ",kilo[2])  
            ile.append(dice)
    ile.insert(0,wartosc)
    ile.insert(0,waga)
    ile.insert(0,y+1)
    
    hm.append(ile)
    print("Waga:" ,waga)
    print("Wartosc:" ,wartosc)
    print("")
print(hm)
